@model IdentityProvider.Models.ViewModels.CreateRoleViewModel
@{
    ViewData["Title"] = "Create Role";
    Layout = "_AdminLayout";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="h3">Create New Role</h1>
        <p class="text-muted">Add a new role to the system</p>
    </div>
    <div class="col-auto">
        <a href="/Admin/Roles" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Roles
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-shield-plus"></i> Role Information
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Role Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter role name (e.g., Manager, Editor)" />
                        <div class="form-text">
                            Role names should be descriptive and follow your organization's naming conventions.
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the purpose and responsibilities of this role..."></textarea>
                        <div class="form-text">
                            Optional description to help administrators understand the role's purpose.
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Create Role
                        </button>
                        <a href="/Admin/Roles" class="btn btn-secondary">
                            <i class="bi bi-x-lg"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle"></i> Role Guidelines
                </h6>
            </div>
            <div class="card-body">
                <h6>Best Practices:</h6>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Use descriptive names (e.g., "Content Editor", "Finance Manager")
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Follow consistent naming conventions
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Avoid special characters in role names
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        Keep role names between 2-256 characters
                    </li>
                </ul>
                
                <hr>
                
                <h6>What happens next?</h6>
                <ol class="list-unstyled">
                    <li class="mb-2">
                        <span class="badge bg-primary me-2">1</span>
                        Role is created in the system
                    </li>
                    <li class="mb-2">
                        <span class="badge bg-primary me-2">2</span>
                        You can assign users to this role
                    </li>
                    <li class="mb-2">
                        <span class="badge bg-primary me-2">3</span>
                        Configure permissions as needed
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Auto-format role name on input
        document.getElementById('Name').addEventListener('input', function() {
            var value = this.value;
            // Remove any leading/trailing spaces and normalize spacing
            value = value.trim().replace(/\s+/g, ' ');
            if (value !== this.value) {
                this.value = value;
            }
        });

        // Form validation feedback
        document.querySelector('form').addEventListener('submit', function(e) {
            var nameInput = document.getElementById('Name');
            if (nameInput.value.trim().length < 2) {
                e.preventDefault();
                nameInput.focus();
                return false;
            }
        });
    </script>
}