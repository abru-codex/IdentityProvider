@model IdentityProvider.Models.ViewModels.CreateRoleViewModel
@{
    ViewData["Title"] = "Create Role";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-plus-circle"></i> Create New Role</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Role Name *</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter role name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="form-text">Role names should be descriptive and follow a consistent naming convention (e.g., "Admin", "User", "Manager").</div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Create Role
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Role Guidelines</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> Use clear, descriptive names</li>
                    <li><i class="bi bi-check-circle text-success"></i> Follow consistent naming conventions</li>
                    <li><i class="bi bi-check-circle text-success"></i> Avoid special characters</li>
                    <li><i class="bi bi-check-circle text-success"></i> Consider role hierarchy</li>
                </ul>
                
                <hr />
                
                <h6>Common Role Examples:</h6>
                <ul class="list-unstyled">
                    <li><span class="badge bg-primary me-1">Admin</span> Full system access</li>
                    <li><span class="badge bg-info me-1">User</span> Basic user access</li>
                    <li><span class="badge bg-success me-1">Manager</span> Management privileges</li>
                    <li><span class="badge bg-warning me-1">Moderator</span> Content moderation</li>
                </ul>
            </div>
        </div>
    </div>
</div>