@model IdentityProvider.Models.ViewModels.RoleDetailsViewModel
@{
    ViewData["Title"] = "Role Details";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-shield-check"></i> Role Details</h2>
            <div>
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit Role
                </a>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Role Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <strong>Role ID:</strong>
                    </div>
                    <div class="col-sm-9">
                        <code>@Model.Id</code>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-3">
                        <strong>Role Name:</strong>
                    </div>
                    <div class="col-sm-9">
                        <span class="badge bg-primary fs-6">@Model.Name</span>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-3">
                        <strong>Normalized Name:</strong>
                    </div>
                    <div class="col-sm-9">
                        <code>@Model.NormalizedName</code>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">Users with this Role</h5>
            </div>
            <div class="card-body">
                @if (Model.AssignedUsers.Any())
                {
                    <div class="row">
                        @foreach (var user in Model.AssignedUsers)
                        {
                            <div class="col-md-6 mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                        @user.UserName?.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <div class="fw-bold">@user.UserName</div>
                                        <small class="text-muted">@user.Email</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No users assigned to this role</p>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Role
                    </a>
                    <a href="@Url.Action("Index", "UserManagement")" class="btn btn-outline-primary">
                        <i class="bi bi-people"></i> Manage Users
                    </a>
                    <button type="button" class="btn btn-danger" onclick="confirmDelete('@Model.Id', '@Model.Name')">
                        <i class="bi bi-trash"></i> Delete Role
                    </button>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">Role Statistics</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-12">
                        <h4 class="text-primary">@Model.UserCount</h4>
                        <p class="text-muted mb-0">Users Assigned</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete role <strong id="deleteRoleName"></strong>?
                <div class="alert alert-warning mt-2">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Warning:</strong> This action cannot be undone and may affect user permissions.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .avatar-sm {
            width: 32px;
            height: 32px;
            font-size: 14px;
        }
    </style>
    
    <script>
        function confirmDelete(roleId, roleName) {
            document.getElementById('deleteRoleName').textContent = roleName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + roleId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}