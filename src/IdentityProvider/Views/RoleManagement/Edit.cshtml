@model IdentityProvider.Models.ViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-pencil"></i> Edit Role</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Role Name *</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter role name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="form-text">Role names should be descriptive and follow a consistent naming convention.</div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Details
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Update Role
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Role Information</h6>
            </div>
            <div class="card-body">
                <p><strong>Role ID:</strong></p>
                <code>@Model.Id</code>
                
                <hr />
                
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    <strong>Note:</strong> Changing a role name will update all user assignments and may affect system permissions.
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">Best Practices</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> Use clear, descriptive names</li>
                    <li><i class="bi bi-check-circle text-success"></i> Follow consistent naming conventions</li>
                    <li><i class="bi bi-check-circle text-success"></i> Avoid special characters</li>
                    <li><i class="bi bi-check-circle text-success"></i> Consider impact on existing users</li>
                </ul>
            </div>
        </div>
    </div>
</div>