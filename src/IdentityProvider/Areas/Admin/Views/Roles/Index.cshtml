@model List<IdentityProvider.Models.ViewModels.RoleListViewModel>
@{
    ViewData["Title"] = "Roles";
    ViewData["PageTitle"] = "Role Management";
    ViewData["PageSubtitle"] = "Manage system roles and user assignments";
    ViewData["Breadcrumbs"] = new List<(string Text, string? Url)>
    {
        ("Admin", Url.Action("Index", "Dashboard", new { area = "Admin" })),
        ("Roles", null)
    };
    ViewData["PageActions"] = $@"
        <a href=""/Admin/Roles/Create"" class=""btn btn-primary"">
            <i class=""bi bi-shield-plus""></i> Add New Role
        </a>";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="admin-card">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h5 class="mb-0">
                    <i class="bi bi-shield-check me-2"></i>Role List
                </h5>
            </div>
            <div class="col-auto">
                <input type="text" class="form-control form-control-sm" id="roleSearch" placeholder="Search roles..." style="width: 200px;">
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table admin-table table-hover" id="rolesTable">
                <thead>
                    <tr>
                        <th>Role Name</th>
                        <th>Description</th>
                        <th>Assigned Users</th>
                        <th>Permissions</th>
                        <th width="180">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                        <i class="bi bi-shield-check"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold">@role.Name</div>
                                        <small class="text-muted">ID: @role.Id.Substring(0, 8)...</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(role.Description))
                                {
                                    <span>@role.Description</span>
                                }
                                else
                                {
                                    <span class="text-muted">No description</span>
                                }
                            </td>
                            <td>
                                @if (role.AssignedUsers.Any())
                                {
                                    <div class="d-flex align-items-center flex-wrap gap-1">
                                        @foreach (var user in role.AssignedUsers.Take(3))
                                        {
                                            <div class="avatar-sm bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center" title="@user">
                                                @user.Substring(0, 1).ToUpper()
                                            </div>
                                        }
                                        @if (role.AssignedUsers.Count > 3)
                                        {
                                            <span class="badge bg-secondary status-badge">+@(role.AssignedUsers.Count - 3) more</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No users assigned</span>
                                }
                            </td>
                            <td>
                                @if (role.Permissions.Any())
                                {
                                    <div class="d-flex align-items-center flex-wrap gap-1">
                                        @foreach (var permission in role.Permissions.Take(3))
                                        {
                                            <span class="badge bg-light text-dark border">@permission</span>
                                        }
                                        @if (role.Permissions.Count > 3)
                                        {
                                            <span class="badge bg-secondary status-badge">+@(role.Permissions.Count - 3) more</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No permissions assigned</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm action-buttons" role="group">
                                    <a href="/Admin/Roles/Details/@role.Id" class="btn btn-outline-primary" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="/Admin/Roles/Edit/@role.Id" class="btn btn-outline-secondary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger" title="Delete" 
                                            onclick="confirmDelete('@role.Id', '@role.Name', '/Admin/Roles/Delete/@role.Id')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete role <strong id="deleteRoleName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enhanced search functionality
            $('#roleSearch').on('keyup', function() {
                var searchText = this.value.toLowerCase();
                var rows = $('#rolesTable tbody tr');
                
                rows.each(function() {
                    var rowText = $(this).text().toLowerCase();
                    $(this).toggle(rowText.includes(searchText));
                });
                
                // Update "no results" message
                var visibleRows = rows.filter(':visible').length;
                if (visibleRows === 0 && searchText.length > 0) {
                    if ($('#noResultsRow').length === 0) {
                        $('#rolesTable tbody').append(
                            '<tr id="noResultsRow"><td colspan="4" class="text-center text-muted py-4">' +
                            '<i class="bi bi-search me-2"></i>No roles found matching your search.' +
                            '</td></tr>'
                        );
                    }
                } else {
                    $('#noResultsRow').remove();
                }
            });
        });

        // Delete confirmation
        function confirmDelete(roleId, roleName) {
            document.getElementById('deleteRoleName').textContent = roleName;
            document.getElementById('deleteForm').action = '/Admin/Roles/Delete/' + roleId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}