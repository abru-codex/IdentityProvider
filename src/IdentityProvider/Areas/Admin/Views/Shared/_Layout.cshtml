<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - @ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        .sidebar {
            min-width: 250px;
            max-width: 250px;
            background-color: #343a40;
            color: #fff;
            transition: all 0.3s;
        }
        .sidebar .nav-link {
            color: #adb5bd;
            border-radius: 4px;
            margin: 2px 8px;
            padding: 10px 16px;
            transition: all 0.2s;
            font-size: 0.9rem;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            color: #fff;
            background-color: #495057;
        }
        .sidebar .nav-link i {
            width: 18px;
        }
        .sidebar-brand {
            padding: 20px;
            border-bottom: 1px solid #495057;
            font-size: 1.1rem;
            font-weight: 600;
        }
        .content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        .admin-header {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 0;
        }
        .admin-navbar {
            padding: 12px 24px;
        }
        .page-header {
            background-color: #fff;
            border-bottom: 1px solid #e9ecef;
            padding: 20px 24px;
            margin-bottom: 0;
        }
        .breadcrumb {
            background: transparent;
            padding: 0;
            margin: 0 0 8px 0;
            font-size: 0.875rem;
        }
        .breadcrumb-item + .breadcrumb-item::before {
            content: "/";
            color: #6c757d;
        }
        .breadcrumb-item a {
            color: #6c757d;
            text-decoration: none;
        }
        .breadcrumb-item a:hover {
            color: #495057;
        }
        .page-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #212529;
            margin: 0;
        }
        .page-subtitle {
            color: #6c757d;
            margin: 4px 0 0 0;
            font-size: 0.9rem;
        }
        .user-dropdown .dropdown-toggle::after {
            display: none;
        }
        .user-avatar {
            width: 32px;
            height: 32px;
            background-color: #6c757d;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 500;
            font-size: 0.875rem;
            color: white;
        }
        @@media (max-width: 768px) {
            .sidebar {
                min-width: 100%;
                max-width: 100%;
                position: absolute;
                z-index: 1000;
                display: none;
            }
            .sidebar.active {
                display: block;
            }
            .page-header {
                padding: 16px;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3">
        <h4 class="text-center mb-4">Admin Panel</h4>
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" 
               href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")" 
               href="@Url.Action("Index", "Users", new { area = "Admin" })">
                <i class="bi bi-people me-2"></i>Users
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Roles" ? "active" : "")" 
               href="@Url.Action("Index", "Roles", new { area = "Admin" })">
                <i class="bi bi-shield-check me-2"></i>Roles
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Clients" ? "active" : "")" 
               href="@Url.Action("Index", "Clients", new { area = "Admin" })">
                <i class="bi bi-diagram-3 me-2"></i>OAuth Clients
            </a>
            <hr class="my-3">
            <a class="nav-link" href="@Url.Action("Index", "Home")">
                <i class="bi bi-house me-2"></i>Back to Site
            </a>
            <a class="nav-link" href="@Url.Action("Logout", "Authentication")">
                <i class="bi bi-box-arrow-right me-2"></i>Logout
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="content">
        <!-- Admin Header -->
        <header class="admin-header">
            <nav class="navbar admin-navbar">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary d-lg-none" type="button" onclick="toggleSidebar()">
                        <i class="bi bi-list"></i>
                    </button>
                    
                    <div class="ms-auto">
                        <!-- User Menu -->
                        <div class="dropdown user-dropdown">
                            <button class="btn btn-light dropdown-toggle d-flex align-items-center" type="button" data-bs-toggle="dropdown">
                                <div class="user-avatar me-2">
                                    @(User?.Identity?.Name?.Substring(0, 1)?.ToUpper() ?? "A")
                                </div>
                                <span class="d-none d-sm-inline">@(User?.Identity?.Name ?? "Administrator")</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header">@(User?.Identity?.Name ?? "Administrator")</h6></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Home")"><i class="bi bi-house me-2"></i>Back to Site</a></li>
                                <li>
                                    <form method="post" action="@Url.Action("Logout", "Authentication")" class="d-inline w-100">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Page Content -->
        <div class="flex-grow-1" style="background-color: #f8f9fa;">
            @await Html.PartialAsync("_PageHeader")
            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Custom Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script>
        
        $(document).ready(function() {
            // Initialize DataTables
            $('.datatable').DataTable({
                pageLength: 10,
                responsive: true,
                language: {
                    search: "Search:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries"
                }
            });
            
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
            
        });

        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('active');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>