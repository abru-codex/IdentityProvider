@model List<IdentityProvider.Models.ViewModels.ClientListViewModel>
@{
    ViewData["Title"] = "OAuth Clients";
    Layout = "_Layout";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="h3">OAuth Client Management</h1>
        <p class="text-muted">Manage OAuth 2.0 and OpenID Connect clients</p>
    </div>
    <div class="col-auto">
        <a href="/Admin/Clients/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Client
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col">
                <i class="bi bi-diagram-3"></i> Registered Clients
            </div>
            <div class="col-auto">
                <input type="text" class="form-control form-control-sm" id="clientSearch" placeholder="Search clients...">
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="mt-3 text-muted">No OAuth clients configured yet.</p>
                <a href="/Admin/Clients/Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Your First Client
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover" id="clientsTable">
                    <thead>
                        <tr>
                            <th>Client</th>
                            <th>Redirect URIs</th>
                            <th>Scopes</th>
                            <th>Settings</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <div class="fw-bold">@client.ClientName</div>
                                        <small class="text-muted">
                                            <i class="bi bi-key"></i> @client.ClientId
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    @if (client.RedirectUris.Any())
                                    {
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var uri in client.RedirectUris.Take(2))
                                            {
                                                <li><small class="text-break">@uri</small></li>
                                            }
                                            @if (client.RedirectUris.Count > 2)
                                            {
                                                <li><small class="text-muted">+@(client.RedirectUris.Count - 2) more</small></li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td>
                                    @if (client.AllowedScopes.Any())
                                    {
                                        @foreach (var scope in client.AllowedScopes.Take(3))
                                        {
                                            <span class="badge bg-info me-1">@scope</span>
                                        }
                                        @if (client.AllowedScopes.Count > 3)
                                        {
                                            <span class="badge bg-secondary">+@(client.AllowedScopes.Count - 3)</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No scopes</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        @if (client.RequirePkce)
                                        {
                                            <span class="badge bg-success" title="PKCE Required">
                                                <i class="bi bi-shield-check"></i> PKCE
                                            </span>
                                        }
                                        @if (client.AllowOfflineAccess)
                                        {
                                            <span class="badge bg-primary" title="Refresh Tokens Enabled">
                                                <i class="bi bi-arrow-clockwise"></i> Refresh
                                            </span>
                                        }
                                        <span class="badge bg-secondary" title="Access Token Lifetime">
                                            <i class="bi bi-clock"></i> @client.AccessTokenLifetimeMinutes min
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/Admin/Clients/Details/@client.ClientId" class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/Admin/Clients/Edit/@client.ClientId" class="btn btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" onclick="confirmDelete('@client.ClientId', '@client.ClientName')" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the client <strong id="deleteClientName"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> This action cannot be undone. Any applications using this client will no longer be able to authenticate.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete Client</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('clientSearch').addEventListener('keyup', function() {
            var searchText = this.value.toLowerCase();
            var rows = document.querySelectorAll('#clientsTable tbody tr');
            
            rows.forEach(function(row) {
                var text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchText) ? '' : 'none';
            });
        });

        // Delete confirmation
        function confirmDelete(clientId, clientName) {
            document.getElementById('deleteClientName').textContent = clientName;
            document.getElementById('deleteForm').action = '/Admin/Clients/Delete/' + clientId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}