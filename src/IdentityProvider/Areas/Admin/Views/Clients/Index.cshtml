@model List<IdentityProvider.Areas.Admin.Models.ViewModels.ClientListViewModel>
@{
    ViewData["Title"] = "OAuth Clients";
    ViewData["PageTitle"] = "OAuth Client Management";
    ViewData["PageSubtitle"] = "Manage OAuth 2.0 and OpenID Connect clients";
    ViewData["Breadcrumbs"] = new List<(string Text, string? Url)>
    {
        ("Admin", Url.Action("Index", "Dashboard", new { area = "Admin" })),
        ("OAuth Clients", null)
    };
    ViewData["PageActions"] = $@"
        <a href=""/Admin/Clients/Create"" class=""btn btn-primary"">
            <i class=""bi bi-plus-circle""></i> Add New Client
        </a>";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i>@TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="admin-card">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h5 class="mb-0">
                    <i class="bi bi-diagram-3 me-2"></i>Registered Clients
                </h5>
            </div>
            <div class="col-auto">
                <input type="text" class="form-control form-control-sm" id="clientSearch" placeholder="Search clients..." style="width: 200px;">
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="mt-3 text-muted">No OAuth clients configured yet.</p>
                <a href="/Admin/Clients/Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Your First Client
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table admin-table table-hover" id="clientsTable">
                    <thead>
                        <tr>
                            <th>Client</th>
                            <th>Redirect URIs</th>
                            <th>Scopes</th>
                            <th>Settings</th>
                            <th width="150">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="bi bi-diagram-3"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@client.ClientName</div>
                                            <small class="text-muted">
                                                <i class="bi bi-key"></i> @client.ClientId
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (client.RedirectUris.Any())
                                    {
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var uri in client.RedirectUris.Take(2))
                                            {
                                                <li><small class="text-break">@uri</small></li>
                                            }
                                            @if (client.RedirectUris.Count > 2)
                                            {
                                                <li><small class="text-muted">+@(client.RedirectUris.Count - 2) more</small></li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td>
                                    @if (client.AllowedScopes.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var scope in client.AllowedScopes.Take(3))
                                            {
                                                <span class="badge bg-info status-badge">@scope</span>
                                            }
                                            @if (client.AllowedScopes.Count > 3)
                                            {
                                                <span class="badge bg-secondary status-badge">+@(client.AllowedScopes.Count - 3)</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No scopes</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex flex-wrap gap-1">
                                        @if (client.RequirePkce)
                                        {
                                            <span class="badge bg-success status-badge" title="PKCE Required">
                                                <i class="bi bi-shield-check"></i> PKCE
                                            </span>
                                        }
                                        @if (client.AllowOfflineAccess)
                                        {
                                            <span class="badge bg-primary status-badge" title="Refresh Tokens Enabled">
                                                <i class="bi bi-arrow-clockwise"></i> Refresh
                                            </span>
                                        }
                                        <span class="badge bg-secondary status-badge" title="Access Token Lifetime">
                                            <i class="bi bi-clock"></i> @client.AccessTokenLifetimeMinutes min
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm action-buttons" role="group">
                                        <a href="/Admin/Clients/Details/@client.ClientId" class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/Admin/Clients/Edit/@client.ClientId" class="btn btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" title="Delete" 
                                                onclick="confirmDelete('@client.ClientId', '@client.ClientName', '/Admin/Clients/Delete/@client.ClientId')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete client <strong id="deleteClientName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enhanced search functionality
            $('#clientSearch').on('keyup', function() {
                var searchText = this.value.toLowerCase();
                var rows = $('#clientsTable tbody tr');
                
                rows.each(function() {
                    var rowText = $(this).text().toLowerCase();
                    $(this).toggle(rowText.includes(searchText));
                });
                
                // Update "no results" message
                var visibleRows = rows.filter(':visible').length;
                if (visibleRows === 0 && searchText.length > 0) {
                    if ($('#noResultsRow').length === 0) {
                        $('#clientsTable tbody').append(
                            '<tr id="noResultsRow"><td colspan="5" class="text-center text-muted py-4">' +
                            '<i class="bi bi-search me-2"></i>No clients found matching your search.' +
                            '</td></tr>'
                        );
                    }
                } else {
                    $('#noResultsRow').remove();
                }
            });
        });

        // Delete confirmation
        function confirmDelete(clientId, clientName) {
            document.getElementById('deleteClientName').textContent = clientName;
            document.getElementById('deleteForm').action = '/Admin/Clients/Delete/' + clientId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}