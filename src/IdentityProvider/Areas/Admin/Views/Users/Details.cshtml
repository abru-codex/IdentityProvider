@model IdentityProvider.Models.ViewModels.UserDetailsViewModel
@{
    ViewData["Title"] = "User Details";
    ViewData["PageTitle"] = "User Details";
    ViewData["PageSubtitle"] = "View comprehensive user information";
    ViewData["Breadcrumbs"] = new List<(string Text, string? Url)>
    {
        ("Admin", Url.Action("Index", "Dashboard", new { area = "Admin" })),
        ("Users", Url.Action("Index", "Users", new { area = "Admin" })),
        ("Details", null)
    };
    ViewData["PageActions"] = $@"
        <div class=""btn-group"" role=""group"">
            <a href=""/Admin/Users/Edit/{Model.Id}"" class=""btn btn-primary"">
                <i class=""bi bi-pencil""></i> Edit User
            </a>
            <button type=""button"" class=""btn btn-outline-danger"" onclick=""confirmDelete('{Model.Id}', '{Model.UserName}')"">
                <i class=""bi bi-trash""></i> Delete
            </button>
        </div>";
    Layout = "_Layout";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="avatar-lg bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                        @Model.UserName?.Substring(0, 1).ToUpper()
                    </div>
                    <div>
                        <h5 class="card-title mb-0">@Model.UserName</h5>
                        <small class="text-muted">User ID: @Model.Id</small>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted">Basic Information</h6>
                        <dl class="row mb-4">
                            <dt class="col-sm-4">Username:</dt>
                            <dd class="col-sm-8">@Model.UserName</dd>
                            
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">
                                @Model.Email
                                @if (Model.EmailConfirmed)
                                {
                                    <i class="bi bi-check-circle-fill text-success ms-1" title="Email Verified"></i>
                                }
                                else
                                {
                                    <i class="bi bi-exclamation-circle text-warning ms-1" title="Email Not Verified"></i>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">
                                @(Model.PhoneNumber ?? "Not provided")
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    @if (Model.PhoneNumberConfirmed)
                                    {
                                        <i class="bi bi-check-circle-fill text-success ms-1" title="Phone Verified"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-exclamation-circle text-warning ms-1" title="Phone Not Verified"></i>
                                    }
                                }
                            </dd>
                        </dl>
                    </div>
                    
                    <div class="col-md-6">
                        <h6 class="text-muted">Security Settings</h6>
                        <dl class="row mb-4">
                            <dt class="col-sm-6">Two-Factor Auth:</dt>
                            <dd class="col-sm-6">
                                @if (Model.TwoFactorEnabled)
                                {
                                    <span class="badge bg-success">Enabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Disabled</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-6">Lockout Enabled:</dt>
                            <dd class="col-sm-6">
                                @if (Model.LockoutEnabled)
                                {
                                    <span class="badge bg-info">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-6">Failed Attempts:</dt>
                            <dd class="col-sm-6">
                                @if (Model.AccessFailedCount > 0)
                                {
                                    <span class="badge bg-warning">@Model.AccessFailedCount</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">0</span>
                                }
                            </dd>
                            
                            <dt class="col-sm-6">Account Status:</dt>
                            <dd class="col-sm-6">
                                @if (Model.LockoutEnd != null && Model.LockoutEnd > DateTimeOffset.UtcNow)
                                {
                                    <span class="badge bg-danger">Locked</span>
                                }
                                else if (Model.EmailConfirmed)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Unverified</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                @if (Model.LockoutEnd != null && Model.LockoutEnd > DateTimeOffset.UtcNow)
                {
                    <div class="alert alert-warning" role="alert">
                        <h6 class="alert-heading">Account Locked</h6>
                        <p class="mb-0">This user account is currently locked until <strong>@Model.LockoutEnd?.ToString("yyyy-MM-dd HH:mm:ss UTC")</strong>.</p>
                    </div>
                }

                <div class="mb-3">
                    <h6 class="text-muted">Assigned Roles</h6>
                    @if (Model.Roles.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-info fs-6">@role</span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No roles assigned to this user.</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-gear"></i> Quick Actions
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Admin/Users/Edit/@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil"></i> Edit User
                    </a>
                    
                    <button type="button" class="btn btn-outline-warning" onclick="showChangePasswordModal()">
                        <i class="bi bi-key"></i> Change Password
                    </button>
                    
                    @if (Model.LockoutEnd != null && Model.LockoutEnd > DateTimeOffset.UtcNow)
                    {
                        <form asp-action="Unlock" asp-route-id="@Model.Id" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-outline-success w-100">
                                <i class="bi bi-unlock"></i> Unlock User
                            </button>
                        </form>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-danger" onclick="showLockUserModal()">
                            <i class="bi bi-lock"></i> Lock User
                        </button>
                    }
                    
                    @if (!Model.EmailConfirmed)
                    {
                        <form asp-action="ConfirmEmail" asp-route-id="@Model.Id" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-outline-info w-100">
                                <i class="bi bi-check-circle"></i> Confirm Email
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <i class="bi bi-info-circle"></i> Account Summary
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h5 class="mb-1">@Model.Roles.Count</h5>
                            <small class="text-muted">Roles</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h5 class="mb-1">@Model.AccessFailedCount</h5>
                        <small class="text-muted">Failed Logins</small>
                    </div>
                </div>
                
                <hr>
                
                <div class="small">
                    <div class="row">
                        <div class="col-6">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-6">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="text-success">Verified</span>
                            }
                            else
                            {
                                <span class="text-warning">Pending</span>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <strong>Phone:</strong>
                        </div>
                        <div class="col-6">
                            @if (string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <span class="text-muted">Not set</span>
                            }
                            else if (Model.PhoneNumberConfirmed)
                            {
                                <span class="text-success">Verified</span>
                            }
                            else
                            {
                                <span class="text-warning">Pending</span>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <strong>2FA:</strong>
                        </div>
                        <div class="col-6">
                            @if (Model.TwoFactorEnabled)
                            {
                                <span class="text-success">Enabled</span>
                            }
                            else
                            {
                                <span class="text-muted">Disabled</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ChangePassword" method="post">
                <input type="hidden" name="UserId" value="@Model.Id">
                <input type="hidden" name="UserEmail" value="@Model.Email">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <div class="input-group">
                            <input name="NewPassword" type="password" class="form-control" required minlength="8">
                            <button class="btn btn-outline-secondary" type="button" onclick="toggleModalPassword('NewPassword')">
                                <i class="bi bi-eye" id="NewPassword-icon"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm New Password</label>
                        <div class="input-group">
                            <input name="ConfirmPassword" type="password" class="form-control" required minlength="8">
                            <button class="btn btn-outline-secondary" type="button" onclick="toggleModalPassword('ConfirmPassword')">
                                <i class="bi bi-eye" id="ConfirmPassword-icon"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Change Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Lock User Modal -->
<div class="modal fade" id="lockUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Lock User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Lock" method="post">
                <input type="hidden" name="Id" value="@Model.Id">
                <div class="modal-body">
                    <p>Are you sure you want to lock user <strong>@Model.UserName</strong>?</p>
                    <div class="mb-3">
                        <label class="form-label">Lock until (optional)</label>
                        <input name="LockoutEnd" type="datetime-local" class="form-control">
                        <div class="form-text">Leave empty for indefinite lockout.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Lock User</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete user <strong id="deleteUserName"></strong>? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showChangePasswordModal() {
            new bootstrap.Modal(document.getElementById('changePasswordModal')).show();
        }

        function showLockUserModal() {
            new bootstrap.Modal(document.getElementById('lockUserModal')).show();
        }

        function toggleModalPassword(fieldName) {
            const field = document.querySelector(`input[name="${fieldName}"]`);
            const icon = document.getElementById(fieldName + '-icon');
            
            if (field.type === 'password') {
                field.type = 'text';
                icon.className = 'bi bi-eye-slash';
            } else {
                field.type = 'password';
                icon.className = 'bi bi-eye';
            }
        }

        function confirmDelete(userId, userName) {
            document.getElementById('deleteUserName').textContent = userName;
            document.getElementById('deleteForm').action = '/Admin/Users/Delete/' + userId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>

    <style>
        .avatar-lg {
            width: 60px;
            height: 60px;
            font-size: 24px;
        }
        
        .badge.fs-6 {
            font-size: 0.875rem !important;
        }
        
        dl.row dt {
            font-weight: 600;
        }
        
        .card-header h5 {
            margin-bottom: 0;
        }
    </style>
}