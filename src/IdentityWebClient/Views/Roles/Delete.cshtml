@model IdentityWebClient.Models.Roles.RoleDetailsDto

@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this role?</h3>
    <p>This action cannot be undone.</p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Users with this role</dt>
        <dd class="col-sm-9">@Model.Users.Count</dd>
    </dl>

    @if (Model.Users.Any())
    {
        <div class="alert alert-warning">
            <strong>Warning:</strong> There are @Model.Users.Count users with this role. Deleting this role will remove it from these users.
        </div>
    }
    
    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>