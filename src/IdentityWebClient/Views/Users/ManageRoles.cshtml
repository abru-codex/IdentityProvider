@model IdentityWebClient.Models.Users.UserDetailsDto

@{
    ViewData["Title"] = "Manage User Roles";
    var userId = ViewBag.UserId;
    var allRoles = ViewBag.AllRoles as List<IdentityWebClient.Models.Roles.RoleDto> ?? new List<IdentityWebClient.Models.Roles.RoleDto>();
    var userRoles = Model.Roles;
    var availableRoles = allRoles.Where(r => !userRoles.Contains(r.Name)).ToList();
}

<h1>Manage Roles for @Model.Email</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5>Current Roles</h5>
            </div>
            <div class="card-body">
                @if (userRoles.Any())
                {
                    <ul class="list-group">
                        @foreach (var role in userRoles)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@role</span>
                                <form asp-action="RemoveFromRole" method="post">
                                    <input type="hidden" name="userId" value="@userId" />
                                    <input type="hidden" name="roleName" value="@role" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                </form>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>This user has no assigned roles.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Available Roles</h5>
            </div>
            <div class="card-body">
                @if (availableRoles.Any())
                {
                    <ul class="list-group">
                        @foreach (var role in availableRoles)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@role.Name</span>
                                <form asp-action="AddToRole" method="post">
                                    <input type="hidden" name="userId" value="@userId" />
                                    <input type="hidden" name="roleName" value="@role.Name" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success btn-sm">Add</button>
                                </form>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>All available roles have been assigned to this user.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Details" asp-route-id="@userId" class="btn btn-secondary">Back to Details</a>
</div>