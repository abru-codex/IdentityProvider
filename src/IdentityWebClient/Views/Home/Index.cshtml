@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Identity Web Client</h1>
    <p class="mb-4">Manage users and roles with the IdentityProvider server.</p>
</div>

<div class="alert alert-info">
    <strong>Email:</strong> @User?.Identity?.Name<br />
    <strong>Username:</strong> @User?.Identity?.Name<br/>
    <strong>Authenticated:</strong> @(User?.Identity?.IsAuthenticated == true ? "Yes" : "No")<br />
    <strong>Authentication Type:</strong> @User?.Identity?.AuthenticationType<br />
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5>User Management</h5>
            </div>
            <div class="card-body">
                <p>Create, edit, and manage users. Assign roles to control access to features.</p>
                <a asp-controller="Users" asp-action="Index" class="btn btn-primary">Manage Users</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Role Management</h5>
            </div>
            <div class="card-body">
                <p>Create and manage roles for your application. Define permissions by role.</p>
                <a asp-controller="Roles" asp-action="Index" class="btn btn-primary">Manage Roles</a>
            </div>
        </div>
    </div>
</div>
