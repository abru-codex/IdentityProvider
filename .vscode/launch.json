{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "IdentityProvider",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build-identityprovider",
			"program": "${workspaceFolder}/src/IdentityProvider/bin/Debug/net9.0/IdentityProvider.dll",
			"args": [],
			"cwd": "${workspaceFolder}/src/IdentityProvider",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bNow listening on:\\s+(https?://\\S+)"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			},
			"console": "internalConsole"
		},
		{
			"name": "IdentityWebClient",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build-identitywebclient",
			"program": "${workspaceFolder}/src/IdentityWebClient/bin/Debug/net9.0/IdentityWebClient.dll",
			"args": [],
			"cwd": "${workspaceFolder}/src/IdentityWebClient",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bNow listening on:\\s+(https?://\\S+)"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			},
			"console": "internalConsole"
		}
	],
	"compounds": [
		{
			"name": "IdentityProvider + IdentityWebClient",
			"configurations": ["IdentityProvider", "IdentityWebClient"],
			"stopAll": true
		}
	]
}
